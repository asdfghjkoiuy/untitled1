    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Qt Application with lldb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "visualizerFile": "/Users/guanhao/Library/Application Support/Code/User/workspaceStorage/4f70807439d7b3d32a4bff90552cd71f/tonka3000.qtvsctools/qt.natvis.xml",
            "showDisplayString": true,
            "linux": {
                "MIMode": "lldb",
                "miDebuggerPath": "/usr/bin/lldb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "environment": [
                    {
                        "name": "PATH",
                        "value": "${env:PATH};${command:qt-cpp.kitDirectory}${/}bin"
                    }
                ],
                "MIMode": "lldb"
            }
        }
    ]
}

